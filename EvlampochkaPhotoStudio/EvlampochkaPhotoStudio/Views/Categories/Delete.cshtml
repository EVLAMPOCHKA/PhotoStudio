@model EvlampochkaPhotoStudio.Models.Category

@{
    ViewData["Title"] = "Удаление";
}

<h1>Подтверждение удаления</h1>

<h3>Вы уверены, что хотите удалить категорию?</h3>
<div>
    <h4>@Model.Name</h4>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
