@model IEnumerable<EvlampochkaPhotoStudio.Models.Room>

@{
    ViewData["Title"] = "Все залы";
}

<p>
    <a class="btn btn-outline-secondary" asp-action="Create">Добавить новый зал</a>
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem; padding:20px; margin:20px;">
            <img src="@item.MainImage" class="card-img-top" alt="Image...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-title">@item.Category</h6>
                <h6 class="card-title">@item.Price BYN</h6>
                <p class="card-text">@item.Description.Substring(0, 10) ...</p>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Подробнее</a>
            </div>
        </div>
    }
</div>



